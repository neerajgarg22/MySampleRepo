{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "eureka": {
    "client": {
      "shouldRegisterWithEureka": false,
      "shouldFetchRegistry": true,
      "serviceUrl": "http://localhost:8761/eureka/"
    }
  },
  "Routes": [
    {
      //ProductDetailsService APIs
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/ProductDetails/AllProductDetails",
      "DownstreamScheme": "http",
      "ServiceName": "ProductDetailsService",
      "UpstreamPathTemplate": "/gateway/ProductDetails/AllProductDetails",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/ProductDetails/{id}",
      "DownstreamScheme": "http",
      "ServiceName": "ProductDetailsService",
      "UpstreamPathTemplate": "/gateway/ProductDetails/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/ProductDetails/AddProduct",
      "DownstreamScheme": "http",
      "ServiceName": "ProductDetailsService",
      "UpstreamPathTemplate": "/gateway/ProductDetails/AddProduct",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/ProductDetails/UpdateProduct",
      "DownstreamScheme": "http",
      "ServiceName": "ProductDetailsService",
      "UpstreamPathTemplate": "/gateway/ProductDetails/UpdateProduct",
      "UpstreamHttpMethod": [ "Put" ]
    },
    {
      //ProductService APIs
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Products",
      "DownstreamScheme": "http",
      "ServiceName": "ProductService",
      "UpstreamPathTemplate": "/gateway/Products",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Products/{id}",
      "DownstreamScheme": "http",
      "ServiceName": "ProductService",
      "UpstreamPathTemplate": "/gateway/Products/{id}",
      "UpstreamHttpMethod": [ "Get", "Delete" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Products/AddProduct",
      "DownstreamScheme": "http",
      "ServiceName": "ProductService",
      "UpstreamPathTemplate": "/gateway/Products/AddProduct",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Products/UpdateProduct",
      "DownstreamScheme": "http",
      "ServiceName": "ProductService",
      "UpstreamPathTemplate": "/gateway/Products/UpdateProduct",
      "UpstreamHttpMethod": [ "Put" ]
    },
    {
      //CartService APIs
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Cart/AddItemToCart/{userId}",
      "DownstreamScheme": "http",
      "ServiceName": "CartService",
      "UpstreamPathTemplate": "/gateway/Cart/AddItemToCart/{userId}",
      "UpstreamHttpMethod": [ "Post" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Cart/RemoveItemFromCart/{userId}",
      "DownstreamScheme": "http",
      "ServiceName": "CartService",
      "UpstreamPathTemplate": "/gateway/Cart/RemoveItemFromCart/{userId}",
      "UpstreamHttpMethod": [ "Delete" ]
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Cart/CheckOut/{userId}",
      "DownstreamScheme": "http",
      "ServiceName": "CartService",
      "UpstreamPathTemplate": "/gateway/Cart/CheckOut/{userId}",
      "UpstreamHttpMethod": [ "Post" ]
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Type": "Eureka",
      "Host": "localhost",
      "Port": 8761
    }
  }
}
